<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/tabiat"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textMove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Move: 0"
                android:textSize="24sp"/>
            <TextView
                android:visibility="invisible"
                android:id="@+id/textLeastMove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingStart="40sp"
                android:paddingEnd="40sp"
                android:text="The least move: 0"
                android:textColor="@color/wheat"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"/>
            <TextView
                android:visibility="invisible"
                android:id="@+id/textLeastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingStart="50sp"
                android:paddingEnd="50sp"
                android:text="The least time: 0"
                android:textColor="@color/wheat"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingRight="8dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/btn1"
            android:tag="00"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="0"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/btn2"
            android:tag="01"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="0"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/btn3"
            android:tag="02"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="0"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/btn4"
            android:tag="03"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="0"
            android:layout_column="3"
            />
        <Button
            android:id="@+id/btn5"
            android:tag="10"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/btn6"
            android:tag="11"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/btn7"
            android:tag="12"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/btn8"
            android:tag="13"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="3"
            />
        <Button
            android:id="@+id/btn9"
            android:tag="20"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="2"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/btn10"
            android:tag="21"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="2"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/btn11"
            android:tag="22"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="2"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/btn12"
            android:tag="23"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="2"
            android:layout_column="3"
            />
        <Button
            android:id="@+id/btn13"
            android:tag="30"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="3"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/btn14"
            android:tag="31"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="3"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/btn15"
            android:tag="32"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="3"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/btn0"
            android:tag="33"
            style="@style/buttonStyle"
            android:onClick="onClick"
            android:layout_row="3"
            android:layout_column="3"
            />

    </GridLayout>
    <RelativeLayout
        android:id="@+id/containerBtn"
        android:layout_width="match_parent"
        android:padding="10sp"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnSettings"
            android:onClick="onClickSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btn_click"
            android:text="@string/settings"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/btnPause"
            style="@style/btn_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:onClick="pauseAndStart"
            android:text="@string/pause" />

        <Button
            android:id="@+id/btnRestart"
            android:onClick="reStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btn_click"
            android:layout_centerHorizontal="true"
            android:text="@string/reset" />

    </RelativeLayout>


</LinearLayout>