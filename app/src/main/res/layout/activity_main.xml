                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/buttonStyle"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="5"/>
            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_marginHorizontal="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/buttonStyle"
                android:text="6"/>
            <Button
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_marginHorizontal="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
